{
    "extends": ["@nuxtjs/eslint-config-typescript"],
    "overrides": [
        {
            "files": ["*.vue"],
            "rules": {
                "indent": "off"
            }
        }
    ],
    "rules": {
        "quotes": ["error", "double"],
        "indent": ["error", 4],
        "arrow-parens": "off",
        "space-before-function-paren": "off",
        "vue/html-indent": ["error", 4],
        "vue/script-indent": ["error", 4, { "baseIndent": 1 }]
    }
}
